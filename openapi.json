{
  "openapi": "3.0.0",
  "info": {
    "title": "Nareshka API",
    "version": "2.0.0",
    "description": "API для платформы изучения программирования Nareshka"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/v2/interviews/categories/": {
      "get": {
        "tags": [
          "interview-categories"
        ],
        "summary": "Получить список категорий",
        "description": "Возвращает все категории вопросов интервью с статистикой",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CategoryResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/interviews/categories/statistics": {
      "get": {
        "tags": [
          "interview-categories"
        ],
        "summary": "Получить статистику категоризации",
        "description": "Возвращает общую статистику по категоризации вопросов",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CategoriesStatisticsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/interviews/categories/{category_id}": {
      "get": {
        "tags": [
          "interview-categories"
        ],
        "summary": "Получить детали категории",
        "description": "Возвращает подробную информацию о категории с кластерами и примерами",
        "parameters": [
          {
            "name": "category_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID категории (например: javascript_core)"
          },
          {
            "name": "limit_questions",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 50
            },
            "description": "Количество примеров вопросов"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CategoryDetailResponse"
                }
              }
            }
          },
          "404": {
            "description": "Category not found"
          }
        }
      }
    },
    "/api/v2/interviews/categories/cluster/{cluster_id}/questions": {
      "get": {
        "tags": [
          "interview-categories"
        ],
        "summary": "Получить вопросы кластера",
        "description": "Возвращает список вопросов определенного кластера",
        "parameters": [
          {
            "name": "cluster_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID кластера"
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            },
            "description": "Номер страницы"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 200
            },
            "description": "Количество вопросов на странице"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionResponse"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Cluster not found"
          }
        }
      }
    },
    "/api/v2/interviews/categories/search/questions": {
      "get": {
        "tags": [
          "interview-categories"
        ],
        "summary": "Поиск вопросов",
        "description": "Полнотекстовый поиск по вопросам интервью с фильтрацией",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "minLength": 2
            },
            "description": "Поисковый запрос (минимум 2 символа)"
          },
          {
            "name": "category_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Фильтр по ID категории"
          },
          {
            "name": "company",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Фильтр по названию компании"
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 200
            },
            "description": "Максимальное количество результатов"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/QuestionResponse"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID категории"
          },
          "name": {
            "type": "string",
            "description": "Название категории"
          },
          "questions_count": {
            "type": "integer",
            "description": "Количество вопросов"
          },
          "clusters_count": {
            "type": "integer",
            "description": "Количество кластеров"
          },
          "percentage": {
            "type": "number",
            "description": "Процент от общего числа вопросов"
          }
        },
        "required": [
          "id",
          "name",
          "questions_count",
          "clusters_count",
          "percentage"
        ]
      },
      "ClusterResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "ID кластера"
          },
          "name": {
            "type": "string",
            "description": "Название кластера"
          },
          "questions_count": {
            "type": "integer",
            "description": "Количество вопросов"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Ключевые слова"
          },
          "example_question": {
            "type": "string",
            "description": "Пример вопроса",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "questions_count",
          "keywords"
        ]
      },
      "QuestionResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID вопроса"
          },
          "question_text": {
            "type": "string",
            "description": "Текст вопроса"
          },
          "company": {
            "type": "string",
            "description": "Компания",
            "nullable": true
          },
          "category": {
            "type": "string",
            "description": "Категория",
            "nullable": true
          },
          "cluster_id": {
            "type": "integer",
            "description": "ID кластера",
            "nullable": true
          },
          "topic_name": {
            "type": "string",
            "description": "Название топика",
            "nullable": true
          }
        },
        "required": [
          "id",
          "question_text"
        ]
      },
      "CategoryDetailResponse": {
        "type": "object",
        "properties": {
          "category": {
            "$ref": "#/components/schemas/CategoryResponse"
          },
          "clusters": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ClusterResponse"
            },
            "description": "Кластеры категории"
          },
          "sample_questions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/QuestionResponse"
            },
            "description": "Примеры вопросов"
          }
        },
        "required": [
          "category",
          "clusters",
          "sample_questions"
        ]
      },
      "CategoriesStatisticsResponse": {
        "type": "object",
        "properties": {
          "total_questions": {
            "type": "integer",
            "description": "Общее количество вопросов"
          },
          "categorized_questions": {
            "type": "integer",
            "description": "Количество категоризированных вопросов"
          },
          "total_categories": {
            "type": "integer",
            "description": "Количество категорий"
          },
          "total_clusters": {
            "type": "integer",
            "description": "Количество кластеров"
          },
          "categorization_percentage": {
            "type": "number",
            "description": "Процент категоризации"
          }
        },
        "required": [
          "total_questions",
          "categorized_questions",
          "total_categories",
          "total_clusters",
          "categorization_percentage"
        ]
      }
    }
  }
}